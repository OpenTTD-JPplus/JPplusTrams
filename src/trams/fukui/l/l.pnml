// Graphics

    // Purchase
    spriteset(spriteset_l_purchase,     "src/trams/fukui/l/gfx/l_purchase.png") {tmpl_p()}

    switch(FEAT_ROADVEHS, SELF, sw_l_purchase, [ 
        STORE_TEMP(CB_FLAG_MORE_SPRITES | PALETTE_USE_DEFAULT, 0x100), getbits(extra_callback_info1, 8, 8) ]) { 
            0: logo_echizen; 
            1: spriteset_l_purchase;
        }

    // Tram Graphics

    // Red
        // Lead
            spriteset(spriteset_l_lead_clsd_irl,            "src/trams/fukui/l/gfx/l_irl_clsd.png") {tmpl_7(1,1)}
            spriteset(spriteset_l_lead_left_irl,            "src/trams/fukui/l/gfx/l_irl_left.png") {tmpl_7(1,1)}
            spriteset(spriteset_l_lead_rght_irl,            "src/trams/fukui/l/gfx/l_irl_rght.png") {tmpl_7(1,1)}
            
            // Left
            spritegroup spritegroup_l_lead_left_irl {
                loaded:  [spriteset_l_lead_clsd_irl];
                loading: [spriteset_l_lead_left_irl];
            }

            // Right
            spritegroup spritegroup_l_lead_rght_irl {
                loaded:  [spriteset_l_lead_clsd_irl];
                loading: [spriteset_l_lead_rght_irl];
            }

            switch (FEAT_ROADVEHS, SELF, spritegroup_l_lead_irl, param_side_of_road ) {
                1:  spritegroup_l_lead_rght_irl;
