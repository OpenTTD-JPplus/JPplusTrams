                    spritegroup_l_rear_left_1cc; //default
            } 


    switch (FEAT_ROADVEHS, PARENT, sw_l_lead, cargo_subtype ) {
        1:  spritegroup_l_lead_1cc;
            spritegroup_l_lead_irl;
    }

    switch (FEAT_ROADVEHS, PARENT, sw_l_rear, cargo_subtype ) {
