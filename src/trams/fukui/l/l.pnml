//set number of articulated parts
switch (FEAT_ROADVEHS, SELF, sw_l_articulated_part, extra_callback_info1) {
    0..1:  return item_l;
        return CB_RESULT_NO_MORE_ARTICULATED_PARTS; //stop adding vehicle parts
}

switch (FEAT_ROADVEHS, SELF, sw_l_cargo_age_period, (param_aging)) {
    0:  return 240;
    1:  return 200;
    2:  return 170;
    3:  return 140;
        return 240; //default
} 

item(FEAT_ROADVEHS, item_l) {
    property {
        name:                           string(STR_L);
        climates_available:             bitmask(CLIMATE_TEMPERATE, CLIMATE_ARCTIC, CLIMATE_TROPICAL);
        refittable_cargo_classes:       bitmask(CC_PASSENGERS);
        loading_speed:                  25;
        cargo_age_period:               240;
        cost_factor:                    175;
        running_cost_factor:            80;
        speed:                          72 km/h;    // Current operates at 40km/h, but capable (with approval) of 70 km/h
        power:                          135 * 2 hp;
        cargo_capacity:                 74;
        introduction_date:              date(2016,03,27);
        model_life:                     VEHICLE_NEVER_EXPIRES;
        vehicle_life:                   50;
        reliability_decay:              14;
        tram_type:                      ELRL;
        sound_effect:                   SOUND_POWER_STATION;
        visual_effect:                  VISUAL_EFFECT_ELECTRIC;
        sprite_id:                      SPRITE_ID_NEW_ROADVEH; //enable new graphics
        misc_flags:                     bitmask(ROADVEH_FLAG_2CC, ROADVEH_FLAG_AUTOREFIT, ROADVEH_FLAG_TRAM, ROADVEH_FLAG_SPRITE_STACK);
        refit_cost:                     0; // Refitting is free
        running_cost_base:              RUNNING_COST_ROADVEH;
        weight:                         21 ton;
        }
    graphics {
        additional_text:                string(STR_CONCAT_4, string(OPERATORS),string(ECHIZEN),string(LIVERIES),string(IRL1CC));
        cargo_subtype_text:             sw_l_subtype_text;
        cargo_capacity:                 (param_capacity * 100 / num_vehs_in_consist) / 2;
        purchase_cargo_capacity:        (param_capacity * 100 / 2) / 2;
        default:                        sw_l_graphics;
        length:                         7;
        cargo_age_period:               sw_l_cargo_age_period;
        running_cost_factor:            92 + ((param_runcost * 30 ) / 2 ) * RunningCostFactor();
        purchase_running_cost_factor:   92 + ((param_runcost * 30 ) / 2 );
        articulated_part:               sw_l_articulated_part;
        visual_effect:                  sw_l_spark;
        purchase:                       sw_l_purchase;
        cost_factor:                    ((param_buycost * 124 ) / 4);
        }
