switch(FEAT_ROADVEHS, SELF, sw_9200_subtype_text, cargo_subtype) {
	    0: return string(LV_IRL);
        1: return string(LV_2CC);
        return CB_RESULT_NO_TEXT;
        }


// Graphics

    // Purchase
    spriteset(spriteset_9200_purchase,     "src/trams/9200/gfx/9200_purchase.png") {tmpl_p()}

    switch(FEAT_ROADVEHS, SELF, sw_9200_purchase, [ 
        STORE_TEMP(CB_FLAG_MORE_SPRITES | PALETTE_USE_DEFAULT, 0x100), getbits(extra_callback_info1, 8, 8) ]) { 
            0: logo_okayama; 
            1: spriteset_9200_purchase;
        }

    // Tram Graphics

    // IRL
    spriteset(spriteset_9200_lead_loaded_irl,  "src/trams/9200/gfx/9200.png") {tmpl_7(1,1)}
    spriteset(spriteset_9200_lead_loading_irl, "src/trams/9200/gfx/9200.png") {tmpl_7(1,25)}
    spritegroup spritegroup_9200_lead_irl {
        loaded:  [spriteset_9200_lead_loaded_irl];
        loading: [spriteset_9200_lead_loading_irl];
    }

    spriteset(spriteset_9200_rear_loaded_irl,  "src/trams/9200/gfx/9200.png") {tmpl_7(1,49)}
    spriteset(spriteset_9200_rear_loading_irl, "src/trams/9200/gfx/9200.png") {tmpl_7(1,73)}
    spritegroup spritegroup_9200_rear_irl {
        loaded:  [spriteset_9200_rear_loaded_irl];
        loading: [spriteset_9200_rear_loading_irl];
    }

    // 2cc
    spriteset(spriteset_9200_lead_loaded_2cc,  "src/trams/9200/gfx/9200_2cc.png") {tmpl_7(1,1)}
    spriteset(spriteset_9200_lead_loading_2cc, "src/trams/9200/gfx/9200_2cc.png") {tmpl_7(1,25)}
    spritegroup spritegroup_9200_lead_2cc {
        loaded:  [spriteset_9200_lead_loaded_2cc];
        loading: [spriteset_9200_lead_loading_2cc];
    }

    spriteset(spriteset_9200_rear_loaded_2cc,  "src/trams/9200/gfx/9200_2cc.png") {tmpl_7(1,49)}
    spriteset(spriteset_9200_rear_loading_2cc, "src/trams/9200/gfx/9200_2cc.png") {tmpl_7(1,73)}
    spritegroup spritegroup_9200_rear_2cc {
        loaded:  [spriteset_9200_rear_loaded_2cc];
        loading: [spriteset_9200_rear_loading_2cc];
    }

    switch (FEAT_ROADVEHS, PARENT, sw_9200_lead, cargo_subtype ) {
        1:  spritegroup_9200_lead_2cc;
            spritegroup_9200_lead_irl;
    }

    switch (FEAT_ROADVEHS, PARENT, sw_9200_rear, cargo_subtype ) {
        1:  spritegroup_9200_rear_2cc;
            spritegroup_9200_rear_irl;
    }

switch (FEAT_ROADVEHS, SELF, sw_9200_graphics, position_in_consist ) {
    0:  sw_9200_lead;
        sw_9200_rear; //default
}

//me4 'F' tram properties
switch (FEAT_ROADVEHS, SELF, sw_9200_capacity, position_in_consist ) {
    0:  return ((param_capacity*74)/2);
    1:  return ((param_capacity*74)/2);
        return ((param_capacity*74)/2); //default
}
