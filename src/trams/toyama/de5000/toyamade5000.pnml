    spriteset(ss_toyamade5000_purchase,     ZOOM_LEVEL_NORMAL, BIT_DEPTH_32BPP, "src/trams/toyama/de5000/toyamade5000_purchase.png") {tmpl_p()}

    switch(FEAT_ROADVEHS, SELF, sw_toyamade5000_purchase, [ 
