    spriteset(ss_toyamade5000_lead_irl, ZOOM_LEVEL_NORMAL, BIT_DEPTH_32BPP, "src/trams/toyama/de5000/toyamade5000_irl.png") {tmpl_7(1,1)}
 

    switch(FEAT_ROADVEHS, SELF, sw_toyamade5000_stack, [ 
